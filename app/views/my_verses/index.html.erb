<% if @verse_reference %>
  <h1><%= @verse_reference.citation_format %> MyVerses</h1>
<% else %>
  <h1>Here are all the user-submitted MyVerses:</h1>
<% end %>  

<% if @my_verses.empty? %>
  <h3 class="no-my_verses">It looks like nobody has created a MyVerse yet. You can be the first!</h3>
<% else %>
  <ul>
    <% @my_verses.each do |mv| %><!-- This should be refactored with a partial and/or helper. -->
      <li>
        <%= link_to(mv.verse_reference.citation_format, my_verse_path(mv)) %>, 
        posted by <%= link_to(mv.user_name, user_path(mv.user)) %>

        <%= render partial: "links_to_edit_and_delete", locals: {my_verse: mv} %>
      </li>
    <% end %>
  </ul>
<% end %>