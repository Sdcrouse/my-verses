<div>
  <h1>Sign up here!</h1>

  <%= render partial: "shared/required_field" %>

  <%= render partial: "shared/validation_errors",
      locals: {resource: @user, attempted_action: "signing up"} %>

  <%= form_for(@user) do |f| %>
    <p>
      <%= f.label :username, "Username:", class: "required-field" %>
      <%= f.text_field :username, required: true %>
    </p>
    <p>
      <%= f.label :email, "E-mail:", class: "required-field" %>
      <%= f.email_field :email, required: true %>
    </p>
    <p>
      <%= f.label :first_name, "First name:" %>
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name, "Last name:" %>
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :password, "Password:", class: "required-field" %>
      <%= f.password_field :password, required: true %>
    </p>

    <%= f.submit "Sign up!" %>
  <% end %>
</div>

<%= render partial: "shared/facebook_link", locals: {user_action: "Sign up"} %>

